<%
t_result = Array.new

if @user_pass

  @user_pass.each do |pair|
    if pair.include?(':')
      t_result.push(pair)
    end
  end
else
  Puppet::Parser::Functions::function('passgen')
  @auth_users.each do |u|
    t_result.push("#{u}:#{scope.function_passgen([u])}")
  end
end
-%>
<%= t_result.join("\n") %>
